<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputButtonsTheme" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_input_selected</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="InputOperationButtonsTheme" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_operation_selected</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DisplayTextTheme">
        <item name="android:textSize">58sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>