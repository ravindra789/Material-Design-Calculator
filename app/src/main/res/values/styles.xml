<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
    </style>

    <style name="InputButtonsTheme" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_input_selected</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="InputOperationButtonsTheme" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_operation_selected</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="DisplayTextTheme">
        <item name="android:textSize">58sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DisplayScrollTheme">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="DisplayImageButtonTheme" parent="Widget.AppCompat.ImageButton">
        <item name="android:alpha">.54</item>
        <item name="android:background">@drawable/button_display_selected</item>
    </style>


</resources>
